@model ItemDetailsVM 

<div id="detailsHolder">
    <h1>@Model.Title</h1>
    <img src="" alt=""/>
    <div>
        <h4>@Model.Description</h4>
        <h4>@Model.Size</h4>
        @if (Model.CommercialType == CommercialType.ForSale)
        {
            if (Model.IsAvailable)
            {
                <h4>@Model.Price</h4>
                <button>Buy</button>
            }
            else
            {
                <button>Sold</button>
            }
        }
        else if (Model.CommercialType == CommercialType.Gift)
        {
            if(Model.IsAvailable)
            {
                <button>Take It</button>
            }
            else
            {
                <p>Given Away</p>
            }
        }
        else if(Model.CommercialType == CommercialType.Personal)
        {
            <button>Personal Collection</button>
        }
    </div>
</div>