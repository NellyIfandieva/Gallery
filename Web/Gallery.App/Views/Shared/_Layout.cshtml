<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nelly's Neurographics Gallery</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div id="navItemsHolder" class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <p>NG</p>
                </a>
                <a asp-controller="Items" asp-action="AllGifts">GIFTS</a>
                <a asp-controller="Items" asp-action="AllPersonal">PERSONAL</a>
                <a asp-controller="Items" asp-action="AllForSale">FOR SALE</a>
                <a asp-controller="About" asp-action="Me">ABOUT ME</a>
                <span id="searchFieldHolder">
                    <form>
                        <input type="search" placeholder="Search" />
                        <input type="submit" value="Go" />
                    </form>
                </span>

                @if(this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                {
                    <partial name="_AdminPartial"/>
                }

                <partial name="_LoginPartial" />
                @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>*@
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - Nelly's Neurographic Gallery&nbsp;&ndash;&nbsp;
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>&nbsp;&ndash;&nbsp;
            <a asp-area="" asp-controller="About" asp-action="Neorographics">About Neurographics</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
