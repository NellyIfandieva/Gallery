<div id="homeIndex">
    <h1>All Neurographic Drawings</h1>

    @for (var i = 0; i < Model.Count() - 1; i += 4)
    {
        for (var j = i; j < i + 4; j++)
        {
            var currentItem = Model.ElementAt(j);
            var mainImage = currentItem.Images.ElementAt(0);

            <div class="itemListing">
                <figure>
                    <a asp-controller="Items" asp-action="Details"><img src="@mainImage.Url" alt="@currentItem.Title's Main Image" /></a>
                    <a class="indexListingFigcapt" asp-controller="Items" asp-action="Details">
                        <figcaption>
                            <a><h5><b>Title:&nbsp;</b>@currentItem.Title</h5></a>
                            <a><h5><b>Size:&nbsp;</b>@currentItem.Size</h5></a>
                            <a><h5><b>Price:&nbsp;</b>@currentItem.Price</h5></a>

                            @if (currentItem.CommercialType == CommercialType.ForSale &&
                            currentItem.IsAvailable)
                            {
                                <button>Get It</button>
                            }
                        </figcaption>
                    </a>
                </figure>
            </div>
        }
    }
</div>
